@using X.PagedList.Mvc.Core
@using X.PagedList
@model IPagedList<hotels.Models.tblPhong>

<div id="product-container">
    <div class="tw-rounded-xl tw-border tw-border-solid tw-border-neutral-200 tw-bg-white tw-p-6">
        @if (ViewBag.Message != null)
        {
            <div class="tw-text-center tw-text-base tw-text-neutral-500 tw-py-10">
                @ViewBag.Message
            </div>
        }
        else
        {
            <div class="tw-space-y-5">
                @foreach (var item in Model.Select((room, index) => new { room, index }))
                {
                    <div class="tw-flex tw-gap-6 tw-items-start tw-bg-gradient-to-r tw-from-indigo-50
                     tw-to-white tw-rounded-2xl tw-shadow-sm tw-border tw-border-indigo-100
                      tw-p-5 hover:tw-shadow-lg tw-transition-all tw-duration-300">
                        <!-- Ảnh phòng -->
                        <div class="tw-w-52 tw-h-36 tw-flex-shrink-0 tw-overflow-hidden tw-rounded-xl
                         tw-shadow-sm hover:tw-scale-[1.02] tw-transition-all tw-duration-300">
                            @if (item.room.AnhPhongs != null && item.room.AnhPhongs.Any())
                            {
                                var imgMain = item.room.AnhPhongs?.FirstOrDefault(p => p.AnhChinh == true);
                                <img src="~/@imgMain?.Link"
                                     alt="@item.room.MaSoPhong"
                                     class="tw-w-full tw-h-full tw-object-cover">
                            }
                            else
                            {
                                <div class="tw-w-full tw-h-full tw-flex tw-items-center tw-justify-center tw-bg-neutral-100 tw-text-neutral-400">
                                    <i class="bx bx-image tw-text-4xl"></i>
                                </div>
                            }
                        </div>

                        <!-- Thông tin -->
                        <div class="tw-flex-1 tw-space-y-2">
                            <div class="tw-flex tw-justify-between tw-items-start">
                                <div>
                                    <h5 class="tw-font-semibold tw-text-lg tw-text-neutral-800">
                                        @item.room.LoaiPhong?.LoaiPhong
                                    </h5>
                                    <p class="tw-text-sm tw-text-neutral-500">@item.room.ViTri</p>
                                </div>
                                <div class="tw-text-right">
                                    <span class="tw-font-semibold tw-text-indigo-700 tw-text-base">
                                        @String.Format("{0:N0} ₫", item.room.GiaPhong)
                                    </span>
                                </div>
                            </div>

                            <p class="tw-text-sm tw-text-neutral-700 tw-line-clamp-3 tw-pr-8">
                                @item.room.TongQuan
                            </p>

                            <div class="tw-flex tw-items-center tw-justify-between tw-pt-3">
                                <div class="tw-flex tw-items-center tw-gap-3">
                                    <span class="tw-text-xs tw-text-neutral-500">Mã phòng:</span>
                                    <span class="tw-font-medium tw-text-sm tw-text-neutral-800">@item.room.MaSoPhong</span>

                                    @switch (item.room.TrangThai)
                                    {
                                        case 0:
                                            <span class="tw-px-2.5 tw-py-1 tw-text-xs tw-rounded-lg tw-font-medium
                                             tw-bg-green-100 tw-text-green-700">Trống</span>
                                            break;
                                        case 1:
                                            <span class="tw-px-2.5 tw-py-1 tw-text-xs tw-rounded-lg tw-font-medium 
                                            tw-bg-yellow-100 tw-text-yellow-700">Đang sử dụng</span>
                                            break;
                                        case 2:
                                            <span class="tw-px-2.5 tw-py-1 tw-text-xs tw-rounded-lg tw-font-medium
                                             tw-bg-red-100 tw-text-red-700">Bảo trì</span>
                                            break;
                                    }

                                <div class="tw-flex tw-items-center tw-gap-1 tw-ml-3">
                                    <i class="bx bx-show tw-text-blue-500 tw-text-base"></i>
                                    <span class="tw-text-xs tw-text-neutral-600">@item.room.Reviewer</span>
                                </div>

                                <div class="tw-flex tw-items-center tw-gap-1">
                                    <i class="bx bxs-star tw-text-yellow-400 tw-text-sm"></i>
                                    <span class="tw-text-xs tw-text-neutral-700">@item.room.Rating</span>
                                </div>
                                </div>

                                <!-- Dropdown chức năng -->
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu !tw-text-sm">
                                        <button class="dropdown-item edit-btn"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editModal"
                                                data-id="@item.room.IDPhong"
                                                data-masophong="@item.room.MaSoPhong"
                                                data-vitri="@item.room.ViTri"
                                                data-giaphong="@item.room.GiaPhong"
                                                data-tongquan="@item.room.TongQuan"
                                                data-rating="@item.room.Rating"
                                                data-viewer="@item.room.Reviewer"
                                                data-idloaiphong="@item.room.IDLoaiPhong"
                                                data-trangthai="@item.room.TrangThai"
                                                data-anhchinh="@item.room.AnhPhongs?.FirstOrDefault(p => p.AnhChinh)?.Link"
                                                data-anhphu1="@item.room.AnhPhongs?.Skip(1).Take(1).FirstOrDefault()?.Link"
                                                data-anhphu2="@item.room.AnhPhongs?.Skip(2).Take(1).FirstOrDefault()?.Link"
                                                data-anhphu3="@item.room.AnhPhongs?.Skip(3).Take(1).FirstOrDefault()?.Link"
                                                data-anhphu4="@item.room.AnhPhongs?.Skip(4).Take(1).FirstOrDefault()?.Link">
                                            <i class="bx bx-edit-alt me-2"></i> Sửa
                                        </button>

                                        <button class="dropdown-item delete-btn"
                                                data-id="@item.room.IDPhong"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal">
                                            <i class="bx bx-trash me-2"></i> Xóa
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @await Html.PartialAsync("CreateRoom")
            @await Html.PartialAsync("EditRoom", new tblPhong(), new ViewDataDictionary(ViewData))
            @await Html.PartialAsync(partialViewName: "DeleteRoom")
        }
    </div>

    <!-- Pagination -->
    <div class="tw-flex tw-justify-center tw-items-center tw-gap-1.5 tw-mt-6 tw-text-sm">
        <button id="prevPage"
                class="tw-pr-2 tw-py-1 tw-cursor-pointer tw-rounded tw-bg-indigo-50
                 hover:tw-bg-indigo-100 tw-text-indigo-600 tw-transition @(Model.PageNumber == 1 ? "tw-opacity-30" : "")"
                data-page="@(Model.PageNumber - 1)">
            <i data-lucide="chevron-left" class="tw-w-4 tw-h-4"></i>
        </button>

        <div id="pagination" class="tw-flex tw-gap-1">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <button class="tw-w-8 tw-h-8 tw-rounded tw-font-medium
                 @(i == Model.PageNumber ? "tw-bg-indigo-600 tw-text-white" : "tw-text-gray-600 tw-hover:bg-indigo-50 tw-transition")"
                        data-page="@i">
                    @i
                </button>
            }
        </div>

        <button id="nextPage"
                class="tw-pl-2 tw-py-1 tw-cursor-pointer tw-rounded tw-bg-indigo-50
                 hover:tw-bg-indigo-100 tw-text-indigo-600 tw-transition @(Model.PageNumber == Model.PageCount ? "tw-opacity-30" : "")"
                data-page="@(Model.PageNumber + 1)">
            <i data-lucide="chevron-right" class="tw-w-4 tw-h-4"></i>
        </button>
    </div>
</div>

<script src="~/assets/js/room.js"></script>