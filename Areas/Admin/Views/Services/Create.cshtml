<div class="modal fade" id="addServiceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content tw-rounded-2xl tw-shadow-2xl overflow-visible">

            <!-- Header -->
            <div class="tw-bg-success tw-relative tw-px-6 tw-py-4">
                <div class="tw-flex tw-items-center tw-gap-3">
                    <i data-lucide="plus-circle" class="tw-w-6 tw-h-6 tw-text-white"></i>
                    <h5 class="modal-title tw-text-white tw-font-semibold tw-text-lg">
                        Thêm dịch vụ mới
                    </h5>
                </div>

                <!-- Nút đóng -->
                <button type="button" class="btn-close tw-absolute tw-top-3 tw-right-3 tw-bg-white/30 tw-rounded-full
                     tw-p-2 hover:tw-bg-white/50 tw-transition tw-z-50 tw-shadow-md" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>

            <!-- Form -->
            <form id="addServiceForm" method="post" asp-area="Admin" asp-controller="Services" asp-action="Create"
                enctype="multipart/form-data">
                <div class="modal-body tw-space-y-8 tw-bg-white tw-px-8 tw-py-6">

                    <!-- Ảnh dịch vụ -->
                    <div
                        class="tw-border tw-border-gray-200 tw-rounded-xl tw-shadow-sm tw-bg-gray-50 tw-p-5 tw-space-y-4">
                        <h6
                            class="tw-font-semibold tw-text-gray-700 tw-text-base tw-border-b tw-border-gray-200 tw-pb-2">
                            Hình ảnh dịch vụ
                        </h6>
                        <div
                            class="tw-flex tw-flex-col tw-items-center tw-gap-3 tw-bg-white tw-p-4 tw-rounded-lg tw-shadow-sm">
                            <label class="tw-font-medium tw-text-gray-700">Ảnh dịch vụ</label>
                            <img id="service-image-preview" src="/assets/img/no-image.png" alt="Ảnh dịch vụ"
                                class="tw-w-60 tw-h-40 tw-object-cover tw-rounded-xl tw-border tw-border-gray-300 tw-shadow-sm hover:tw-scale-[1.02] tw-transition">
                            <input type="file" id="service-image" name="Image" accept="image/*"
                                class="form-control tw-text-sm tw-mt-2" />
                            <small id="service-image-link"
                                class="tw-text-xs tw-text-gray-500 tw-break-all tw-text-center tw-max-w-[14rem]">
                                Chưa có ảnh
                            </small>
                        </div>
                    </div>

                    <!-- Thông tin dịch vụ -->
                    <div class="tw-border tw-border-gray-200 tw-rounded-xl tw-shadow-sm tw-bg-gray-50 tw-p-5">
                        <h6
                            class="tw-font-semibold tw-text-gray-700 tw-text-base tw-border-b tw-border-gray-200 tw-pb-2">
                            Thông tin dịch vụ
                        </h6>

                        <div class="tw-grid tw-grid-cols-2 tw-gap-5 tw-mt-4">
                            <div>
                                <label for="service-name" class="tw-font-medium tw-text-gray-700">Tên dịch vụ</label>
                                <input type="text" id="service-name" name="DichVu" class="form-control tw-mt-1"
                                    placeholder="Nhập tên dịch vụ..." required />
                                <span class="text-danger" id="error-DichVu"></span>
                            </div>

                            <div>
                                <label for="service-price" class="tw-font-medium tw-text-gray-700">Giá dịch vụ
                                    (VNĐ)</label>
                                <input type="number" id="service-price" name="GiaDichVu" class="form-control tw-mt-1"
                                    placeholder="Nhập giá..." />
                                <span class="text-danger" id="error-GiaDichVu"></span>
                            </div>

                            <div>
                                <label for="service-discount" class="tw-font-medium tw-text-gray-700">Giá ưu đãi
                                    (VNĐ)</label>
                                <input type="number" id="service-discount" name="GiaUuDai" class="form-control tw-mt-1"
                                    placeholder="Nhập giá ưu đãi..." />
                                <span class="text-danger" id="error-GiaUuDai"></span>
                            </div>

                            <div>
                                <label for="service-duration" class="tw-font-medium tw-text-gray-700">Thời lượng
                                    (phút)</label>
                                <input type="number" id="service-duration" name="ThoiLuong" class="form-control tw-mt-1"
                                    placeholder="Nhập thời lượng..." />
                                <span class="text-danger" id="error-ThoiLuong"></span>
                            </div>

                            <div>
                                <label for="service-feature" class="tw-font-medium tw-text-gray-700">Đặc điểm</label>
                                <input type="text" id="service-feature" name="DacDiem" class="form-control tw-mt-1"
                                    placeholder="Nhập đặc điểm..." />
                                <span class="text-danger" id="error-DacDiem"></span>
                            </div>

                            <div>
                                <label for="service-type" class="tw-font-medium tw-text-gray-700">Loại dịch vụ</label>
                                <select id="service-type" name="IDLoaiDichVu" class="form-select tw-mt-1"
                                    asp-items="ViewBag.LoaiDichVu">
                                    <option value="">-- Chọn loại dịch vụ --</option>
                                </select>
                                <span class="text-danger" id="error-IDLoaiDichVu"></span>
                            </div>

                            <div class="tw-col-span-2">
                                <label for="service-description" class="tw-font-medium tw-text-gray-700">Mô tả dịch
                                    vụ</label>
                                <textarea id="service-description" name="MoTa" class="form-control tw-mt-1" rows="3"
                                    placeholder="Nhập mô tả dịch vụ..."></textarea>
                                <span class="text-danger" id="error-MoTa"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Trạng thái dịch vụ -->
                    <div
                        class="tw-border tw-border-gray-200 tw-rounded-xl tw-shadow-sm tw-bg-gray-50 tw-p-5 tw-flex tw-items-center tw-justify-between">
                        <label for="service-status" class="tw-font-semibold tw-text-gray-700 tw-text-base">Trạng
                            thái</label>
                        <select id="service-status" name="TrangThai"
                            class="form-select tw-w-1/3 tw-text-gray-700 tw-font-medium tw-mt-1">
                            <option value="0">Còn hoạt động</option>
                            <option value="1">Ngưng hoạt động</option>
                        </select>
                    </div>

                </div>

                <!-- Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success">Thêm dịch vụ</button>
                </div>
            </form>
        </div>
    </div>
</div>