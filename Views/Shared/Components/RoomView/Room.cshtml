@model IList<tblPhong>

<section id="rooms-showcase" class="rooms-showcase section">
    <div class="container section-title" data-aos="fade-up">
        <span class="description-title">Phòng</span>
        <h2>Phòng</h2>
        <p>Khám phá các loại phòng và suite sang trọng của chúng tôi được thiết kế để mang lại sự thoải mái tối
            đa</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-5">
            @foreach (var room in Model.Take(1))
            {
                var mainImage = room.AnhPhongs?.FirstOrDefault(a => a.AnhChinh == true)?.Link;
                <div class="col-xl-8" data-aos="zoom-in" data-aos-delay="200">
                    <div class="hero-room-showcase">
                        <div class="showcase-image-container">
                            <img src="~/@mainImage" alt="@room.LoaiPhong?.LoaiPhong" class="img-fluid">
                            <div class="room-category-badge">
                                <span>@room.LoaiPhong?.LoaiPhong</span>
                            </div>
                            <div class="room-details-overlay">
                                <div class="room-specs">
                                    <span class="spec-item"><i class="bi bi-people"></i><span>@room.LoaiPhong?.SucChua
                                            Khách</span></span>
                                    <span class="spec-item"><i class="bi bi-house"></i><span>@room.LoaiPhong?.DienTich
                                            m²</span></span>
                                    <span class="spec-item"><i class="bi bi-geo-alt"></i><span>@room.ViTri</span></span>
                                </div>
                            </div>
                        </div>
                        <div class="showcase-content">
                            <div class="room-title-section">
                                <h2>@room.LoaiPhong?.LoaiPhong</h2>
                                <div class="room-rating">
                                    <div class="stars">
                                        @{
                                            int stars = (int)Math.Round(room.Rating ?? 0);
                                            for (int i = 0; i < stars; i++)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                        }
                                    </div>
                                    <span class="rating-text">@room.Rating?.ToString("0.0") Đánh giá</span>
                                </div>
                            </div>
                            <p class="room-description">@room.TongQuan</p>
                            <div class="booking-section">
                                <div class="price-display">
                                    <span class="currency">VND</span>
                                    <span class="amount">@room.GiaPhong?.ToString("N0")</span>
                                    <span class="period">mỗi đêm</span>
                                </div>
                                <a href="@Url.Action("Details", "Room", new { id = room.IDPhong })"
                                    class="primary-booking-btn">Đặt Phòng</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="col-xl-4">
                <div class="room-list-container">
                    @foreach (var room in Model.Skip(1).Take(3))
                    {
                        var image = room.AnhPhongs?.FirstOrDefault()?.Link;
                        <div class="standard-room-card" data-aos="slide-left">
                            <div class="card-image">
                                <img src="~/@image" alt="@room.LoaiPhong?.LoaiPhong" class="img-fluid">
                                <div class="view-link">
                                    <i class="bi bi-arrow-up-right"></i>
                                </div>
                            </div>
                            <div class="card-content">
                                <h4>@room.LoaiPhong?.LoaiPhong</h4>
                                <p>@room.TongQuan</p>
                                <div class="booking-row">
                                    <div class="price">@room.GiaPhong?.ToString("N0")<small>/đêm</small></div>
                                    <a href="@Url.Action("Details", controller: "Room", new { id = room.IDPhong })"
                                        class="book-link">Đặt</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="text-center" data-aos="fade-up" data-aos-delay="600">
            <a href="/Room/Index" class="explore-all-link">
                <span>Khám Phá Tất Cả Phòng</span>
                <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
</section>