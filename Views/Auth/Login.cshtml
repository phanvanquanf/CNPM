@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Đăng nhập";
}
<div class="tw-flex tw-items-center tw-justify-center tw-min-h-screen tw-bg-gradient-to-br tw-from-white tw-to-gray-200">

    <div class="tw-w-full tw-max-w-md tw-bg-white tw-px-10 tw-py-8 tw-rounded-xl tw-shadow-xl tw-relative">
        <div class="tw-absolute tw-top-0 tw-left-0 tw-w-full tw-h-1 tw-bg-gradient-to-r tw-from-primary tw-to-gray-700 tw-rounded-t-xl"></div>

        <div class="tw-text-center tw-mb-4">
            <h1 class="tw-text-2xl tw-font-semibold tw-text-primary tw-mb-2">Đăng Nhập</h1>
            <p class="tw-text-sm tw-text-gray-600">
                Chào mừng đến với <span class="tw-font-semibold tw-text-primary">Grandoria</span>, đăng nhập để tiếp tục
            </p>
        </div>

        <button type="button" class="tw-w-full tw-py-2 tw-border tw-border-gray-300 tw-text-sm tw-cursor-pointer tw-bg-white tw-rounded-lg hover:tw-opacity-80 tw-mb-4">
            <div class="tw-flex tw-items-center tw-justify-center">
                <img src="~/assets/img/google-logo.png" alt="google" class="tw-w-6 tw-h-6 tw-mr-2" />
                <span class="tw-text-gray-500 tw-font-medium">Đăng nhập với Google</span>
            </div>
        </button>

        <div class="tw-text-center tw-text-xs tw-text-gray-500 tw-relative tw-mb-3">
            <span class="tw-absolute tw-left-0 tw-top-1/2 tw-w-1/3 tw-h-px tw-bg-gray-300"></span>
            <span class="tw-absolute tw-right-0 tw-top-1/2 tw-w-1/3 tw-h-px tw-bg-gray-300"></span>
            Hoặc đăng nhập bằng
        </div>

        <form asp-action="Login" method="post">
            <div class="tw-mb-5">
                <label for="email" class="tw-block tw-mb-2 tw-text-primary tw-font-medium tw-text-sm">
                    Email
                </label>
                <input id="email" name="email" type="email" placeholder="Nhập email của bạn"
                       class="tw-w-full tw-px-4 tw-text-sm tw-py-2.5 tw-border tw-rounded focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-black" />
            </div>

            <div class="tw-mb-5">
                <label for="password" class="tw-block tw-mb-2 tw-primary tw-font-medium tw-text-sm">
                    Mật khẩu
                </label>
                <div class="tw-relative">
                    <input id="password" name="password" type="password" placeholder="Nhập mật khẩu"
                           class="tw-w-full tw-px-4 tw-text-sm tw-py-2.5 tw-border tw-rounded focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-black" />
                    <button type="button" class="tw-absolute tw-right-3 tw-top-1/2 -tw-translate-y-1/2 tw-text-gray-500 hover:tw-text-black">
                        <i class="fa fa-eye"></i>
                    </button>
                </div>
            </div>

            <div class="tw-flex tw-justify-between tw-items-center tw-text-sm tw-mb-5 tw-text-gray-800">
                <label class="tw-flex tw-items-center tw-space-x-2">
                    <input type="checkbox" class="tw-accent-black" />
                    <span>Ghi nhớ đăng nhập</span>
                </label>
                <a href="#" class="hover:tw-underline">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="tw-w-full tw-py-2 tw-cursor-pointer tw-bg-primary tw-text-white tw-rounded-lg tw-font-medium hover:tw-bg-primary/80 tw-transition">
                ĐĂNG NHẬP
            </button>

            <div class="tw-text-center tw-text-sm tw-mt-5 tw-text-gray-600">
                Chưa có tài khoản?
                <a href="/Auth/Register" class="tw-text-primary tw-font-medium hover:tw-underline">Đăng ký ngay</a>
            </div>
        </form>
    </div>
</div>

